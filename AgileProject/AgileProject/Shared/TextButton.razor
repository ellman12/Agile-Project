@* Button with an icon and text. *@ 
<link href="css/components/TextButton.css" rel="stylesheet"/>

<button class="textBtn" @onclick="@OnClick"><span class="material-icons-outlined" style="color: #@IconColorHex">@Icon</span><span>@Text</span></button>

@code {

	[Parameter, EditorRequired] public string Icon { get; set; } = null!;
	
	[Parameter] public string IconColorHex { get; set; } = "FFFFFF";

	[Parameter, EditorRequired] public string Text { get; set; } = null!;
	
	[Parameter, EditorRequired] public Action OnClick { get; set; } = null!;

}